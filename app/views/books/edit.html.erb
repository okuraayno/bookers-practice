<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
<div class="field">
  <label class="title-class" for="title">Title</label>
  <%= f.text_field :title, class: "title-class" %>
</div>
<div class="field">
  <label class="body-class" for="body">Body</label>
  <%= f.text_area :body, class: "body-class" %>
</div>
<div class="actions">
  <%= f.submit 'Update Book', class: "btn" %>
</div>
<% end %>

<span><%= link_to "Show", book_path(@book.id) %></span>
<span><%= link_to "Back", '/books' %></span>